<h1>Log In</h1>
<% if flash[:danger] %>

<div class="danger"><%= flash[:danger] %></div>

<% end %>

<%= form_for :user, url: "/login", method: "post" do |f| %>

  <%= f.text_field :name, :placeholder => "username" %> <br />
  <%= f.text_field :password, :placeholder => "Password" %> <br />
  <%= f.submit "Submit" %> 

<% end %>
